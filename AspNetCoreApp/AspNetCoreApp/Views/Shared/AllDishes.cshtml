@model Dish

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h2>Название: @Model.Name</h2>
    <p>@Model.ShortDesc</p>
    <p>Стоимость: @Model.Price.ToString("c")</p>
    <p>Энергетическая ценность: @Model.CaloricContent</p>
    <p>Вес: @Model.Weight</p>
    <p><a class="btn btn-warning" asp-controller="RestaurantCart" asp-action="AddToCart" asp-route-id="@Model.Id">Добавить в корзину</a></p>
</div>